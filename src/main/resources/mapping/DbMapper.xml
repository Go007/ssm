<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hong.ssm.mapper.DbMapper">
    
    <sql id="baseColumnList">
            bondCode,
            shortName,
            fullName,
            bondType,
            issueMethod,
            issuerName,
            customType,
            residualMaturity,
            bondYield,
            defaultRate,
            assessDate
    </sql>
    
     <insert id="insertYyBondYield" parameterType="com.hong.ssm.domain.YyBondYield">
          insert into yy_bond_yield (
            <include refid="baseColumnList" />
            )
            values
                (
                #{bondCode},
                #{shortName},
                #{fullName},
                #{bondType},
                #{issueMethod},
                #{issuerName},
                #{customType},
                #{residualMaturity},
                #{bondYield},
                #{defaultRate},
                #{assessDate}
                )
     </insert>

    <select id="findOne" resultType="com.hong.ssm.domain.YyBondYield">
        select * from yy_bond_yield limit 0,1
    </select>
</mapper>